<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/mainImageView"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView

    android:id="@+id/myImageViewText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/mainImageView"
    android:layout_alignTop="@+id/mainImageView"
    android:layout_alignRight="@+id/mainImageView"
    android:layout_alignBottom="@+id/mainImageView"
    android:layout_margin="1dp"
    android:gravity="center"
    android:text="AD"
        android:background="#E0E0E0"
        android:textSize="25dp"

        />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mainImageView"
        android:gravity="center"
        android:text="222kjedjd"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/mainTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mainImageView"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/mainTextView"
        android:text="5555550" />

    <ImageView
        android:id="@+id/mainImageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mainTextView"
        android:layout_marginBottom="14dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/mainTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainImageView2"
        android:layout_marginStart="139dp"
        android:layout_marginBottom="8dp"
        android:text="dffffffff" />

    <TextView
        android:id="@+id/mainTextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_toRightOf="@id/mainTextView"
        android:paddingRight="25dp"
        android:text="55555555555"
        android:layout_marginTop="15dp"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/mainImageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:visibility="visible"
        >
    </View>

</RelativeLayout>